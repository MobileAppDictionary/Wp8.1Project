    <Grid>
        <ListView x:Name="TranslatedWordsList" Loaded="TranslatedWordsList_Loaded" ItemClick="TranslatedWordsList_OnItemClick" IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Name="txtWord" Text="{Binding}" FontSize="24" FontWeight="Light"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
